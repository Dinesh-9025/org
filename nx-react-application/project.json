{
  "name": "nx-react-application",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./nx-react-application/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/nx-react-application",
        "index": "nx-react-application/src/index.html",
        "baseHref": "/",
        "main": "nx-react-application/src/main.tsx",
        "tsConfig": "nx-react-application/tsconfig.app.json",
        "assets": [
          "nx-react-application/src/favicon.ico",
          "nx-react-application/src/assets"
        ],
        "styles": ["nx-react-application/src/styles.scss"],
        "scripts": [],
        "isolatedConfig": true,
        "webpackConfig": "nx-react-application/webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "nx-react-application/src/environments/environment.ts",
              "with": "nx-react-application/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "nx-react-application:build",
        "hmr": true
      },
      "configurations": {
        "development": {
          "buildTarget": "nx-react-application:build:development"
        },
        "production": {
          "buildTarget": "nx-react-application:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["./nx-react-application/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "nx-react-application:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "nx-react-application/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
